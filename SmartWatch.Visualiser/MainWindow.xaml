<Window x:Class="SmartWatch.Visualiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:visualiser="clr-namespace:SmartWatch.Visualiser"
        Title="MainWindow" Height="350" Width="525"
        Name="window"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid DataContext="{Binding ViewModel}">
        
        <Grid.Resources>
            <Style TargetType="Rectangle">
                <Setter Property="Width" Value="50"></Setter>
                <Setter Property="Fill" Value="Red"></Setter>
                <Setter Property="Margin" Value="20"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            </Style>
            
        </Grid.Resources>
        
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left">
            <Rectangle Height="{Binding Sensor1Proximity}"></Rectangle>
            <Rectangle Height="{Binding Sensor2Proximity}"></Rectangle>
            <Rectangle Height="{Binding Sensor3Proximity}"></Rectangle>
        </StackPanel>

    </Grid>
</Window>
