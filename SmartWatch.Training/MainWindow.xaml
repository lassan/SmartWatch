<Window x:Class="SmartWatch.Training.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Training Data" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock>Name:</TextBlock>
            <TextBox x:Name="FilenameTextBox" />

            <Button Content ="Vertical Scroll Training"
                    Background="Green"
                    Click="VerticalScrollTrainingClick">
            </Button>
            <Button Content="HorizontalScrollTraining"
                    Background="Green"
                    Click="HorizontalScrollTrainingClick" />
            <Button Content="Stop"
                    Background="Red"
                    Click="StopButtonClick" />
            <TextBlock x:Name="IsRecordingTextBlock"
                       Visibility="Hidden">
                Recording...
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>