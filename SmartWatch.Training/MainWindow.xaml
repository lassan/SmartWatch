<Window x:Class="SmartWatch.Training.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Training Data" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock>Filename:</TextBlock>
            <TextBox x:Name="FilenameTextBox" />

            <TextBlock>Gesture name:</TextBlock>
            <TextBox x:Name="GestureNameTextBox" />
            <Button Content="Start"
                    Background="Green"
                    Click="StartButtonClick" />
            <Button Content="Stop"
                    Background="Red"
                    Click="StopButtonClick" />
            <TextBlock x:Name="IsRecordingTextBlock"
                       Visibility="Hidden">
                Recording...
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>